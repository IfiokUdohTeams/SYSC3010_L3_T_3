<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/headquarters"
        android:layout_width="155dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:text="@string/headquarters"
        android:onClick="goto_hq"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toTopOf="@+id/lab1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explain"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/lab1"
        android:layout_width="155dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:text="@string/Lab1"
        android:onClick="goto_Lab1"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toTopOf="@+id/lab2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headquarters" />

    <Button
        android:id="@+id/lab2"
        android:layout_width="155dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:text="@string/Lab2"
        android:onClick="goto_Lab2"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lab1"
        app:layout_constraintVertical_bias="0.823" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#E1E8ED"
        android:text="Select Which Location you are currently monitoring:"
        android:textColor="#061150"
        android:textColorHighlight="#FFFFFF"
        app:autoSizeMaxTextSize="25mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>